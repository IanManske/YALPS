{
  "compilerOptions": {
    /* Docs: https://www.typescriptlang.org/tsconfig */
    // Output
    "module": "nodenext",
    "noEmit": true,
    "outDir": "dist",

    // Imports
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    // Type checking
    "strict": true,
    "noImplicitReturns": true
  }
}
